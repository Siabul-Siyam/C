if((b<a)&& (c>b) || (b<a)&& (c== b))
{
    printf(":)\n");
}
//2nd
else if((b>a)&&(c<b)|| (b>a)&&(c==b))
{
    printf(":(\n");
}
//3rd
else if(((b>a) && (c>b)) && ((c-b) < (b-a)))
{
     printf(":(\n");
}
//4th
else if(((b>a) && (c>b)) && ((c-b) >= (b-a)))
{
     printf(":)\n");
